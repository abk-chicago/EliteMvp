<lint>

    <!-- Ignores issue: sharedPreferences.edit() is not followed by commit() or apply()-->
    <issue id="CommitPrefEdits">
        <ignore
            path="src/main/java/com/pordiva/clean_template/data/manager/SharedPreferenceManager.java"/>
    </issue>

    <!-- Ignores issue: in manifest, if :allowBackup="true", then u must have :fullBackupContent="@xml/" -->
    <issue id="AllowBackup" severity="informational"/>

    <!-- Ignores issue: unused .xml files, colors, strings, dimens ... -->
    <issue id="UnusedResources" severity="ignore"/>

    <!-- Ignores issue: GoogleAppIndexing not found in manifest-->
    <issue id="GoogleAppIndexingWarning" severity="informational"/>

    <!-- Ignores issue: Avoid textSize smaller than 12sp-->
    <issue id="SmallSp" severity="ignore"/>

    <!-- Ignores issue: ContentDescription not found for ImageView, ImageButton for accessibility tools-->
    <issue id="ContentDescription" severity="ignore"/>


</lint>